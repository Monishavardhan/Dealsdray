<%- include('layout/header') %>
<div class="col-lg-12 mt-5">
    <div class="table-responsive">
      <% if( user && user.length > 0) { %> 
        <table class="table table-stripped text-center">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Email Id</th>
              <th>Phone NO</th>
              <th>Designation</th>
              <th>Gender</th>
              <th>Course</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% user.forEach((row, index) => { %>
              <tr class="align-middle">
                <td><%= index + 1 %></td>
                <td>
                  <img src="<%= row.image %>" width="60" class="img-thumbnail" />
                </td>
                <td><%= row.name %></td>
                <td><%= row.email %></td>
                <td><%= row.phone %></td>
                <td><%= row.designation %></td>
                <td><%= row.gender %></td>
                <td><%= row.course %></td>
                <td>
                  <a href="/edit/<%= row._id %>" class="text-success">
                    <i class="fas fa-edit fa-lg mx-1"></i>
                  </a>
                  <a href="/delete/<%= row._id %>" class="text-danger">
                    <i class="fas fa-trash fa-lg mx-1"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h1 class="text-center text-secondary mt-5">No user Found in Database</h1>
      <% } %>
    </div>
  </div>
  
<%- include('layout/footer') %>
